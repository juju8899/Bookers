<h1>一覧</h1>
<table border="1">
   <th>タイトル</th>
   <th>感想</th>
   <th>メニュー</th>

   <tb><% @books.each do |book| %>

   <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   </tr>

   <% end %>
   </tb>
</table>


<h1>新規投稿</h1>

<% if @book.errors.any? %>
 <%= @book.errors.count %> ERRORS
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
 <h4>タイトル</h4>
 <%= f.text_field :title %>

 <h4>感想</h4>
 <%= f.text_area :body %>

 <%= f.submit '投稿' %>
<% end %>

