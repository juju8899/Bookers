<h1>All Books</h1>
<% @books.each do |book| %>

 <p>タイトル</p>
 <span>
   <%= link_to book.title, book_path(book.id) %>
 </span>

<% end %>

<h1>Your Book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
 <h4>タイトル</h4>
 <%= f.text_field :title %>

 <h4>感想</h4>
 <%= f.text_area :body %>

 <%= f.submit '投稿' %>
<% end %>

